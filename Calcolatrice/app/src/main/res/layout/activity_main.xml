<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/numberText"
        android:textSize="40sp"
        android:padding="10dp"
        android:gravity="center|right|end"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="308dp">

            <Button
                android:id="@+id/buttonC"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="C" />

            <Button
                android:id="@+id/buttonPM"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+/-" />

            <Button
                android:id="@+id/buttonP"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="%" />

            <Button
                android:id="@+id/buttonD"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7" />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8" />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9" />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/buttonPer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4" />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5" />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6" />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/buttonMeno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="411dp">

            <Button
                android:id="@+id/button1"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3" />

            <Button
                android:id="@+id/buttonPiu"
                style="@style/CalcolatriceBottobi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+" />
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                style="@style/CalcolatriceBottobi"
                android:layout_weight="2"
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="0" />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/buttonpunto"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="." />

            <Button
                style="@style/CalcolatriceBottobi"
                android:id="@+id/buttonUguale"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="=" />
        </TableRow>
    </TableLayout>
</LinearLayout>